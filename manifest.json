{
  "manifest_version": 3,
  "name": "Focused Reading Companion",
  "version": "6.9",
  "description": "Translate Spanish words/phrases on highlight and view history.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
