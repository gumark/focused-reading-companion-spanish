{
  "manifest_version": 3,
  "name": "Focused Reading Companion",
  "version": "1.1",
  "description": "Translate Spanish text on highlight and show history.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
